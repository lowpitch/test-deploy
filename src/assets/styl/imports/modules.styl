// Video controls
// -------------------------
.video-controls {
    width: 300px;
    margin: auto;
    text-align: center;

    .icon-vol_on,
    .icon-vol_off,
    .icon-share {
        height: 64px;
        vertical-align: top;
        position: relative;

        &:before {
            position: absolute;
            top: 25px;
            left: 15px;
        }
    }
}





// Promo
// -------------------------
.promo {
    display: block;
    position: relative;
    text-decoration: none;
    line-height: 0;

    .promo-inner {
        position: absolute;
        top: 0;
        width: 100%;
        height: 100%;
        border-radius: 5px;
    }

    img {
        border-radius: 5px;
    }

    .promo-icon {
        position: absolute;
        bottom: 2px;
        left: 0;
    }

    .promo-links {
        padding-left: 50px;
        position: absolute;
        bottom: $padding-base;
        left: $padding-base;
    }

    &:hover {
        color: $black;
    }
    .icon-play,
    .icon-play span {
        transition: none;
    }
    &:hover .icon-play {
        border-color: $black;

        span {
            background: $black;
        }
    }
}
.promo.blue .promo-inner,
.promo-feature.blue .promo-inner {
    background-image: linear-gradient(to bottom, rgba(0,100,231,0.2) 0%, rgba(0,100,231,1) 100%);
}
.promo.red .promo-inner,
.promo-feature.red .promo-inner {
    background-image: linear-gradient(to bottom, rgba(251,0,53,0.2) 0%, rgba(251,0,53,1) 100%);
}
.promo.yellow .promo-inner,
.promo-feature.yellow .promo-inner {
    background-image: linear-gradient(to bottom, rgba(255,191,22,0.2) 0%, rgba(255,191,22,1) 100%);
}

.promo-feature {
    @extends .promo;

    .promo-links {
        padding: ($padding-base * 3) $padding-base 0 $padding-base;
        width: 100%;
        text-align: center;
        position: auto;
        bottom: auto;
        left: auto;
    }

    .promo-subtitle {
        margin-bottom: 10px;
    }
}




