//
// Base
// --------------------------------------------------



// Reset the box-sizing
// http://www.paulirish.com/2012/box-sizing-border-box-ftw/ (and no, performance is not an issue)
*,
*:before,
*:after {
    box-sizing: border-box;
}

html {
    // font-size: 62.5%;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}

body {
    font-family: $font-family;
    font-size: $font-size-base;
    line-height: $line-height-base;
    color: $white;
    background-color: $purple;

}

.velocity-animating { transition: none !important;}

html, body {
    height:100%;
}

@media (orientation:landscape) {
    html.ipad.ios7 > body {
        position: fixed;
        bottom: 0;
        width:100%;
        height: 672px !important;
    }
}



#pals-app{
    position:relative;
//    //display: inline-block;
    overflow:auto;
    -webkit-overflow-scrolling: touch;
    height:auto !important; /* real browsers */
    height:100%; /* IE6: treaded as min-height*/
    min-height:100%; /* real browsers */
}

.mobile-only {
    display:none;
  }


.pink-background {
    background:$pink;
}
.purple-background {
    background:$purple;
}

.underline {
    border-bottom:1px solid white;
}

// Typekit loads asynchronously for speed and
// performance reasons. We hide the headers
// so you don't get the FOUC
.wf-loading h1,
.wf-loading h2,
.wf-loading h3,
.wf-loading h4,
.wf-loading h5 {
    visibility: hidden;
}

.wf-loading nav .item {
    visibility: hidden;
}

h1,h2,h3,h4,h5 {
    font-family: $heading-font-family;
    font-weight: $heading-font-weight;
    line-height: $heading-line-height;
    margin-top: 0;
    margin-bottom: 0;
}

a {
    color: $white;

    text-decoration:none;

    &:hover {
        // color: $red;
    }
}

img {
    width: 100%;
}

ul, li {
    list-style: none;
    margin: 0;
    padding: 0;
}

hr {
    border: 0;
    height: 0;
    border-top: 1px solid rgba($white, 0.4);
}

p {
    padding:0; margin:0;
}



