}
#video {
  .logo-block {
    position:absolute;
    z-index:15;
    top:30px;
    left:30px;
    width:164px;

    height:auto;

    cursor:pointer;
    transition:border-color 0.3s;



    ul {
      height:0;
      overflow:hidden;

    }

    li {
      opacity:0;
      transition:opacity 0.5s;

    }

    .item-title {
      display: block;
      font-size:22px;
      line-height:23px;

      font-family: $title-font-family;
      color: #ebe5d1;


      a {

        border-left:0px solid transparent;


        transition:color 0.1s, border-width 0.3s, padding-left 0.3s;
        margin-left:0;
        color: white;
        display:block;
        padding:3px 0 3px 0px;

        subtle-shadow();

        em {
          font-style:normal;
          readable-shadow(rgba(0,0,0,0.5));
        }
        span {
          color: #a29776;
          font-family: $subtitle-font-family;
          text-transform:uppercase;
          font-size:12px;
          line-height:14px;
          padding-top:2px;
          display:block;
        }
      }


    }

    .item-title a:hover  {
     border-left:9px solid $pink;
     padding-left:5px;

    }


    &:hover {


      ul {

        height:auto;

      }

      li {
        opacity:1;

        &.section-2 {
          transition-delay:0.05s;
        }

        &.section-3 {
          transition-delay:0.1s;
        }

        &.section-4 {
          transition-delay:0.15s;
        }

        &.section-5 {
          transition-delay:0.2s;
        }
         &.section-6 {
          transition-delay:0.25s;
        }
      }
    }
  }
}

