.layout-video {
    margin: 0 auto 0 auto;
    // max-width: 1340px; // 1440px
    position: relative;
    height:100%;

    &.buffering {
      opacity:0.3;
    }

}


.ipad {
  .buffering-video {
    display:none !important;
  }
}
.buffering-video {
  position:absolute;
  top:0; left:0; right:0; bottom:0;
  background:rgba(0,0,0,0.6);

  visibility:hidden;
  opacity:0;
  transition:opacity 0.5s;

  &.buffering {
    visibility:visible;
    opacity:1;
  }
  .image-wrapper {
    width:72px; height:72px;
    background:black;
    padding:20px;
    border-radius:10px;
    position:absolute;
    top:50%; left:50%;
    margin-left:-36px;
    margin-top:-36px;
  }
}

@media all and (device-width: 768px) and (device-height: 1024px) and (orientation:portrait) {

  #video .logo-block ul {
    display:none !important;
  }

}
@media all and (device-width: 768px) and (device-height: 1024px) and (orientation:landscape) {
    #video .logo-block ul {
    display:none !important;
  }

}


.logos {
  margin:80px 0 50px;

  .heading-medium {
    text-transform:none;
  }
