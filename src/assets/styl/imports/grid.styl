  .col8-small-push  { left: percentage(8, $grid-columns); }
  .col9-small-push  { left: percentage(9, $grid-columns); }
  .col10-small-push { left: percentage(10, $grid-columns); }
  .col11-small-push { left: percentage(11, $grid-columns); }

  .col1-small-pull  { right: percentage(1, $grid-columns); }
