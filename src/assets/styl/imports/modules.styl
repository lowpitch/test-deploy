.content-grid {

    .box.empty {
        border:1px solid rgba(255,255,255,0.3);
    }
    .box {
        box-sizing:border-box;
        padding-top:120px;
        min-height:350px;

        text-align:center;
        color:white;
        margin-bottom:$grid-gutter-width;
        width:100%;
        position:relative;
        overflow:hidden;

        // background:$pink;

        .background {
            position:absolute;
            z-index:1;
            top:0; left:0; right:0; bottom:0;
        }

        .foreground {
            position:relative;
            z-index:2;

             .type-icon:before {
                  text-shadow: 0px 1px 0px rgba(0, 0, 0, 0.8), 0px -1px 0px rgba(0,0,0,0.8),1px 0px 0px rgba(0, 0, 0, 0.8), -1px 0px 0px rgba(0,0,0,0.8);
                  padding:10px;
                  border-radius:100%;
                  border:1px solid white;
                }

                .type-icon {
                    margin-bottom:20px;
                }

            readable-shadow(rgba(0,0,0,0.3));
        }

    }
}

