  .col7-small-pull  { right: percentage(7, $grid-columns); }
  .col8-small-pull  { right: percentage(8, $grid-columns); }
  .col9-small-pull  { right: percentage(9, $grid-columns); }
  .col10-small-pull { right: percentage(10, $grid-columns); }
  .col11-small-pull { right: percentage(11, $grid-columns); }

  // Offsets
  .col1-small-offset  { margin-left: percentage(1, $grid-columns); }
  .col2-small-offset  { margin-left: percentage(2, $grid-columns); }
  .col3-small-offset  { margin-left: percentage(3, $grid-columns); }
  .col4-small-offset  { margin-left: percentage(4, $grid-columns); }
  .col5-small-offset  { margin-left: percentage(5, $grid-columns); }
  .col6-small-offset  { margin-left: percentage(6, $grid-columns); }
  .col7-small-offset  { margin-left: percentage(7, $grid-columns); }
  .col8-small-offset  { margin-left: percentage(8, $grid-columns); }
  .col9-small-offset  { margin-left: percentage(9, $grid-columns); }
  .col10-small-offset { margin-left: percentage(10, $grid-columns); }
  .col11-small-offset { margin-left: percentage(11, $grid-columns); }


  .col12, .col12-small {
    padding-right: ($grid-gutter-width / 2);
  }


}


