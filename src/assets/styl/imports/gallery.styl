#gallery {
  position:absolute;
  z-index:100000;
  left:0; top:0; width:100%; height:100%;
  display:none;

  .close {
    color:$text-col;
  }
}

.gallery-overlay {
  position:absolute;
  top:0; left:0; width:100%; height:100%;
  background:black;

  .nav-box {
    width:60px;
    height:60px;
    border-radius:2px;
    background:rgba(0,0,0,0.8);
    opacity:0.6;
    transition:opacity 0.3s;
    position:absolute;
    top:40%;
    margin-top:-30px;
    left:20px;

    cursor:pointer;

    display:none;

    &:before {
      content: '<';
      color:white;
      font-size:38px;
      position:absolute;
      left:0; right:0;
      text-align:center;
      font-weight:bold;
      margin-top:10px;
    }

    &.next {
      left:auto;
      right:20px;

      &:before {
        content: '>';
      }
    }

    &:hover {
      opacity:1;
    }

  }

  .image-holder {
    position:absolute;
    top:0; left:0; bottom:20%; right:0;
    background:black;

    img {
      width:auto;
      opacity:0;
      transition:opacity 0.3s;
      &.loaded {
        opacity:1;
      }
    }
  }

  .info-holder {
    position:absolute;
    top:100%;

    left:0; right:0; bottom:0;
    background:#555145;
  padding-top:1%; padding-bottom:1%;
  overflow:auto;
    font-size:22px;
  transition:top 0.3s;

  .body {
    clear:both;
  }
  &.shown {
    top:80%;

    .container {
      visibility:visible;
      opacity:1;
    }
  }
    .container {
      opacity:0;
      visibility:hidden;
      transition:opacity 0.3s;
      transition-delay:0.3s;
    }
  }



  .title-wrap .pagination {
    float:left;
    margin-right:10px;
    margin-bottom:0;
  }

  color:$text-col;
}